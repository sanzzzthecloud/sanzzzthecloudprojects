<script>
const gift = document.getElementById("gift");
const wrapper = document.getElementById("giftWrapper");
const opening = document.getElementById("opening");
const music = document.getElementById("music");

gift.addEventListener("click", () => {
    music.play();
    wrapper.classList.add("open");

    setTimeout(()=>wrapper.style.opacity="0",900);

    setTimeout(()=>{
        opening.classList.add("show");
        startTexts();
        startLove();
        startFireworks();
        startSparkles();
    },1200);
});

/* ===== TEKS TURUN 1 PERSATU ===== */
function startTexts() {
    setInterval(() => {
        const t = document.createElement("div");
        t.className = "text";
        t.innerText = "ryuu lopee jihan";
        t.style.left = Math.random() * (innerWidth - 300) + "px";
        t.style.top = "-100px";
        document.body.appendChild(t);

        let y = -100;
        const speed = 5;

        const move = setInterval(() => {
            y += speed;
            t.style.top = y + "px";
            if (y > innerHeight) {
                clearInterval(move);
                t.remove();
            }
        },20);
    }, 450);
}

/* ===== LOVE ===== */
function startLove() {
    const hearts=["â¤ï¸","ðŸ’–","ðŸ’˜","ðŸ’•","ðŸ’ž"];
    setInterval(()=>{
        const l=document.createElement("div");
        l.className="love";
        l.innerHTML=hearts[Math.floor(Math.random()*hearts.length)];
        l.style.left=Math.random()*innerWidth+"px";
        l.style.fontSize=(40+Math.random()*60)+"px";
        l.style.animationDuration=(1+Math.random()*1.5)+"s";
        document.body.appendChild(l);
        setTimeout(()=>l.remove(),2500);
    },120);
}

/* ===== FIREWORK ===== */
function startFireworks() {
    setInterval(()=>{
        for(let i=0;i<12;i++){
            const f=document.createElement("div");
            f.className="firework";
            f.style.background=`hsl(${Math.random()*360},100%,65%)`;
            f.style.left=Math.random()*innerWidth+"px";
            f.style.top=Math.random()*innerHeight+"px";
            f.style.setProperty("--x",(Math.random()*350-175)+"px");
            f.style.setProperty("--y",(Math.random()*350-175)+"px");
            document.body.appendChild(f);
            setTimeout(()=>f.remove(),1000);
        }
    },420);
}

/* ===== SPARKLE ===== */
function startSparkles(){
    setInterval(()=>{
        const s=document.createElement("div");
        s.className="sparkle";
        s.innerHTML="âœ¨";
        s.style.left=Math.random()*innerWidth+"px";
        s.style.top=Math.random()*innerHeight+"px";
        document.body.appendChild(s);
        setTimeout(()=>s.remove(),1500);
    },300);
}
</script>

